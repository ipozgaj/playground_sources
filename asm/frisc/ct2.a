VJ	`EQU	0FFFFFFFD
CT_LR	`EQU	0FFFFFFF8
CT_CR	`EQU	0FFFFFFF9

	LOADL	R0, %D 50000
	STORE	R0, (CT_LR)
        LOADL	R0, %B 10
	STORE	R0, (CT_CR)
	LOADL	R1, %D 100
	LOADL	R2, 100

PETLJA	LOAD	R0, (VJ)
	STORE	R0, (R2)
	INC	R2
	DEC	R1
	JR_NZ	PETLJA

	LOAD	R0, (CT_LR)
	SUB	%D 50000, R0, R0
	HALT
